{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns"],
    "strict": true,
    "noImplicitAny": false,
    "types": ["./types.d.ts"]
  },
  "importMap": "./import_map.json",
  "lint": {
    "rules": {
      "tags": ["recommended"]
