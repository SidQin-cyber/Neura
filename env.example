# ================================
# CORE CONFIGURATION (REQUIRED)
# ================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# ================================
# OPTIONAL CONFIGURATIONS
# ================================

# Search Provider Configuration
TAVILY_API_KEY=your_tavily_api_key
EXA_API_KEY=your_exa_api_key

# Feature Toggles
NEXT_PUBLIC_ENABLE_SAVE_CHAT_HISTORY=true
NEXT_PUBLIC_ENABLE_SHARE=true

# Application URL (for API callbacks)
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app

# Redis Configuration (Optional - for caching)
USE_LOCAL_REDIS=false
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Additional AI Providers (Optional)
ANTHROPIC_API_KEY=your_anthropic_key
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key
GROQ_API_KEY=your_groq_key
XAI_API_KEY=your_xai_key
DEEPSEEK_API_KEY=your_deepseek_key

# ================================
# VERCEL DEPLOYMENT NOTES
# ================================
# 1. Copy this file and rename to .env.local for local development
# 2. Add these variables in Vercel Dashboard → Project Settings → Environment Variables
# 3. Set NEXT_PUBLIC_APP_URL to your actual Vercel domain
# 4. Make sure all required variables are set before deployment 